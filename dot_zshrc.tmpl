{{ else if eq .chezmoi.os "linux" }}
alias update="sudo apt update -qq && sudo apt full-upgrade -y && sudo apt autoremove -y"
{{ end }}

# Installs one or more user specified packages via 'sudo apt install [package(s)] -y'
# User authenication is required.
# Provides user feedback during install processes and aborts if errors are encountered.
install() {
    [ $# -eq 0 ] && {
        echo "Error: No package(s) specified."
        echo "Usage: install package1 [package2 ...]"
        return 1
    }

    echo "Updating package lists... "
    sudo apt update -y -qq >/dev/null 2>&1 || {
        echo "Failed to update package lists."
        echo "Aborting install."
        return 1
    }
    echo "Done."

    echo "Installing: $@"
    sudo apt install "$@" -y
}

# Uninstalls and purges one or more user specified packages via 'sudo apt purge [package(s)] -y'
# Also removes all packages which are no longer required via 'sudo apt autoremove --purge'
# User authenication is required.
# Provides user feedback during purge processes and aborts if errors are encountered.
uninstall() {
    if [ $# -eq 0 ]; then
        echo "Error: No package(s) specified."
        echo "Usage: uninstall package1 [package2 ...]"
        return 1
    fi

    echo "Purging: $@"
    sudo apt purge "$@" -y || {
        echo "Purge failed."
        echo "Aborting autoremove step."
        return 1
    }

    echo "Cleaning up unused dependencies ..."
    sudo apt autoremove -y --purge
}

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh