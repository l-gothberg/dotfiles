# ┌──────────────────────────────────────────────────────────────┐
# │           SSH client configuration — managed by chezmoi      │
# └──────────────────────────────────────────────────────────────┘

# Global defaults that are safe everywhere
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 3
    # ForwardAgent yes                  # ← only enable when really needed
    IdentitiesOnly yes
    AddKeysToAgent yes

# macOS-specific keychain integration
{{ if eq .chezmoi.os "darwin" }}
  IgnoreUnknown UseKeychain
  UseKeychain yes
{{ end }}

# ─── GitHub ──────────────────────────────────────────────────────

Host github-personal
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    # IdentitiesOnly yes               # already set globally

